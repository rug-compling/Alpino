%% adds agreement
subject_verb_agreement(Sign,Agr) :-
    Sign:subj => np,
    Sign:subj:e_agr => Agr.

%% adds agreement
subject_verb_agreement(Sign,Agr,Person) :-
    Sign:subj => np,
    Sign:subj:prs => Person,
    subject_verb_agreement(Sign,Agr).

