a_lex(verb(HebbenZijn,Infl,ninv(Sc0,Sc)),Sign,_,Cs) :-
    !,
    Sign => vb,
    sc(Sc,Sc1),
    Sign:vframe ==> Sc1,
    unify_v_vb(Sign0,Sign1),
    hstem(Sign),
