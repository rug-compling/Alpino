subject_vp_adjective(A,Inf) :-
    A0 => a,
    A0:aform => (attr;nattr;iets),
    A0:me_adj => no, % ...
    adjective(A0),
    (  vp_adj_e_deps(A0,A,Inf)
    ;  vp_adj_exs(A0,A)
    ).

vp_adj_e_deps(A0,A,Inf) :-
    unify_except(A,A0,e_deps),
    A0:e_deps => [],
    A:e_deps <=> [Inf],
    no_subj_vp_arg(Inf),
    Inf:slash => [].

vp_adj_exs(A0,A) :-
    A0:aform => ~iets,
    A0:aform => ~attr,
    unify_except_l(A0,A,[dt:vc,exs]),
    A0:exs <=> Exs0,
    A:exs <=> Exs,
    VP => rel,
    VP:relform => relform_inf,
    VP:tmploc => non_adv,
    unify_mods(VP),
    lists:select(VP,Exs,Exs0),
    instantiated_deprel(A,vc,VP).

