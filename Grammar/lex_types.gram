    Sbar => sbar,
    Sbar:ctype => (c_of;c_of_short;c_redrel;c_dat;c_als),
    Sbar:e_deps => [],
    verbal_arg_noun(N0,N,Sbar).

subject_sbar_vp_noun(N) :-
    subject_sbar_noun(N0),
    no_subj_vp_arg(VP),
