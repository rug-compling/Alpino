    XP:slash <=> [Arg],
    (	Arg => sbar,
        Arg:ctype => c_none,
	Arg:e_deps => []
    ;	Arg => np
    ),
    Arg:dt => [].

%% ik ga liever boeken lezen dan platen kopen
comparative_arg(XP) :-
    XP => vpx,
    XP:vform => inf,
    XP:slash <=> [].

