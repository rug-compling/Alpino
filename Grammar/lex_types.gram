    Sbar => vp, % spur.amb.
    Sbar:subj_nform => obl_het.

subject_vp_no_het_adjective(Sign) :-
    subject_vp_adjective(Sign,Sbar),
    Sbar => vp, % spur.amb.
    Sbar:subj_nform => opt_het.

