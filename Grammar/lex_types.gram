post_n_n(Num) :-
    Num => post_n_n,
    sign(Num,np),
    initialize_dt([],Num).

%% num=yes if the word is a number too
enumeration(Num) :-
    Num => enumeration,
    sign(Num,np),
    initialize_dt([],Num),
    Num:dt:hwrd:lemma <=> WORD,
    when(nonvar(WORD),num_enumeration(WORD,Num)).

num_enumeration(Word,Sign):-
    num_enumeration(Word),
    !,
    Sign:num => yes.
num_enumeration(_,Sign):-
    Sign:num => no.

num_enumeration(Num) :-
    alpino_lex:lexicon(number(hoofd(_)),_,[Num],[],_).

