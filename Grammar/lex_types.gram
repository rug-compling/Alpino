    A1:exs <=> Exs,
    (  Sbar => sbar, Sbar:ctype => c_dat, Sbar:e_deps => []
    ;  no_subj_vp_arg(Sbar)
    ),
    Sbar:slash => [],
    unify_mods(Sbar),
    lists:select(Sbar,Exs,Exs0),
    instantiated_deprel(A1,vc,Sbar),
    unify_except_l(A1,A,[e_deps,dt:pobj1]),
    A1:e_deps => [],
    het_np_arg(NP),
    NP:sel => to_left,
    instantiated_deprel(A,pobj1,NP),
    A:e_deps <=> [NP].

