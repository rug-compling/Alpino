    XP => sbar,
    XP:slash <=> [Arg],
    (	Arg => sbar,
	Arg:e_deps => [],
        Arg:ctype => c_none
    ;	Arg => np,
	Arg:nform => (norm;meas_mod), % * een leuker boek dan dat regent
	Arg:prs => thi                % * een leuker boek dan dat besta
    ),
