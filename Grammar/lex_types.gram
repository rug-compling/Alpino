    aux_v(V,VP),
    main_v_subj(V),
    VP:predms <=> VP:cpredms,
    VP:dets <=> VP:cdets,
    VP:apps <=> VP:capps,
    V:vtype => vcontrol,
    V:act => act,
    dependents(V,[vc/VP]),
    V:subj <=> Subj,
    control(VP,Subj).

