aux(VP,HZ,V,C,C) :-
    aux_v(V,VP),
    imper(V),
    V:vtype => vaux,
    V:act => act,
    dependents(V,[vc/VP]),
    VP:predms <=> VP:cpredms,
    VP:dets <=> VP:cdets,
    VP:apps <=> VP:capps,
    VP:subj <=> V:subj,
    VP:hebben_zijn <=> HZ.

