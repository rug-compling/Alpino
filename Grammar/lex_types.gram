map_dep(er_pp(Prep,VC),pc,PP,_):-
    ( VC => vp ; VC => sbar ),
    pp_pc_arg(PP0,Prep),
    unify_except(PP0,PP,pp_role),
    PP:pp_role => pp_pobj1,
    PP:pp_er => yes,
    PP:wh => nwh,
    PP:sel => to_left,
    PP:cj => ncj, % x heeft scherpe kritiek daarop en daarvan dat ...; problems 2nd phase
    deprel(PP,vc,VC).
map_dep(er_pp(Prep),pc,PP,_):-
    pp_pc_arg(PP,Prep),
    PP:wh => nwh,
    PP:pp_er => yes,
    PP:sel => ~to_topic.
