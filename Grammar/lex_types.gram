add_rel(N0,N) :-
    unify_except_l(N0,N,[cmods,mexs]),
    N0:mexs <=> Rels,
    N:mexs <=> [Rel|Rels],
    Rel => mexs_cat,
    Rel:nform => norm,
    Rel:tmploc => (loc;non_adv;str_er),
    N0:cmods <=> Cmods0,
    N:cmods <=> Cmods,
    Rel:mods <=> Out,
    when((nonvar(Out);?=(Cmods0,Cmods);nonvar(Cmods)),
         ( Out = [], Cmods0=Cmods
         ; Out = [Mod], Cmods=[Mod|Cmods0]
         )
        ).

