%% naar wij verwachten ...
naar_complementizer(C) :-
    complementizer(C0),
    unify_except(C0,C1,sc:h:slash),
    unify_except(C1,C,ctype),
    C:ctype => (c_mod;c_adv),
    SBAR => sbar,
    SBAR:dt => [], 
    SBAR:e_deps => [],
    SBAR:ctype => c_naar,
    C:sc:h:slash <=> [SBAR].

%% te-infinitival complementizers (creating an adjunct)
%% "[door [vp een dijk aan te leggen]] werd de dreiging bezworen"
inf_complementizer(C) :-
    inf_vpx_comp(C,cp),
    C:ctype => c_mod.

%% `om' can introduce both vp-complement or te-infinitival adjunct
om_complementizer(C) :-
    inf_vpx_comp(C,oti),
    hstem(C),
    C:ctype => c_om.

%% want wie denk je dat ik zag?
root_complementizer(C) :-
    C => comp,
    C:wh => nwh,
    C:sc <=> [Root],
    C:ctype => c_root,
    Root => start,
    comp(C,du),
    unify_mods(Root),
    C:hstem <=> Val,
    (   Val = dus,
        Root:sv1 => no
    ;   dif(Val,dus)
    ).
%% "en vertrekt naar huis"  ok
%% "dus vertrekt naar huis"  disallowed because of confusion
%% with "dus" as ordinary modifier - this would allow too many amb
%% it really should only disallow dus + topic_drop, because these are fine:
%% dus kom je nu wel of niet?
%% dus ga snel naar de winkel!
%% dus ga jij eens even snel naar de winkel!

van_complementizer(C) :-
    C => comp,
    C:wh => nwh,
    C:sc <=> [Root],
    Root => start,
    comp(C,svan),
    C:ctype => c_van,
    unify_mods(Root).

start_complementizer(C) :-
    C => comp,
    C:wh => nwh,
    C:ctype => c_compare_np,
    comp(C,cp),
    C:sc <=> [START],
    START => start,
    unify_mods(START).

comparative(W,C) :-
    C => comparative,
    initialize_dt([],C),
    compar_form(W,Wform),
    C:compar_form <=> Wform,
    sign(C,comparative),
    C:sc <=> [XP],
    XP:haswh =?> no,
    comparative_arg(XP),
    unify_mods(XP).

compar_form(als,Form) :-
    Form => cf_als.

compar_form(dan,Form) :-
    Form => cf_dan.

compar_form(e_als,Form) :-
    Form => cf_e_als.

