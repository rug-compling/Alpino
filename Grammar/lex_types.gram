    D => det,
    sign(D,detp),
    hstem(D),
    D:sc => [],
    D:nform => norm,
    D:wh => nwh,
    D:subn => sub_det,
    D:neclass ==> none,
    initialize_dt([],D).

name_determiner(D) :-
