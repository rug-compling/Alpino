%% een leuker boek dan beschikbaar is
comparative_arg(XP) :-
    XP => vp,
    XP:cleft => no,
    XP:slash <=> [Arg],
    XP:vform => fin,
    (	Arg => sbar,
	Arg:e_deps => [],
        Arg:ctype => c_none
    ;	Arg => np,
	Arg:nform => (norm;meas_mod),  % * een leuker boek dan regent
	Arg:prs => thi                 % * een leuker boek dan beschikbaar ben
    ),
