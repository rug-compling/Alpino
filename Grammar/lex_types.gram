    main_v_subj(V),
    VP:predms <=> VP:cpredms,
    VP:dets <=> VP:cdets,
    VP:apps <=> VP:capps,
    V:vtype => vcontrol,
    V:act => act,
    (	dependents(V,[vc/VP,obj2/OBJ]),
        dat_np_arg(OBJ),
	control(VP,OBJ)
    ;	dependents(V,[vc/VP])
    ).

