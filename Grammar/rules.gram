    SBAR:ctype => c_adv,
    Num:app => yes,
    hd_mod_structure(Num,SBAR,Num1).

%%EX%% iets van dertig kinderen
grammar_rule(num_num_adv_num, Num1, [Adv,Num]):-
    Num1 => num, Adv => pre_num_adv, Num => num,
