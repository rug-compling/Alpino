comp_v_structure(VP,Aanhet,Inf) :-
    structure,
    unify_mods(Aanhet),
    unify_mods(Inf),
    unify_vb_v(VP0,Inf),
    unify_except_l(VP0,VP,[ccat0,ccat,dt,vform,cmods,mods,capps,apps,
                           cdets,dets,cpredms,predms]),
    Inf:vform => inf,
    Inf:sc => [],
    Inf:slash => [],
    Inf:parts => [],
    xy_dep_dt(Aanhet,Inf,VP,ahi,cmp,body),
    non_hd_dt_principle(VP,ahi).

