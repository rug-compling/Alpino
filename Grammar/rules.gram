grammar_rule(pred_pp_voor,Pred,[PP]) :-
    pred_pp_structure(Pred,PP),
    Pred:pcat => (voor_pred_ap;voor_pred_np),
    PP:ld_pc => pred_pp,
    PP:prep ==> voor.

