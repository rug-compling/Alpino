te_v_structure(VP,Te,V) :-
    structure,
    VP => v, Te => te_comp, V => v,
    unify_mods(Te),
    unify_except_l(V,VP,[ccat0,ccat,dt,vform,cj]),
    VP:vform => (te;wk_te;pass_te),
