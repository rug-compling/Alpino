pp_modifier(PP) :-
    PP => pp,
    PP:wh => nwh,
    PP:pp_role => pp_obj1,
    PP:nnform => ~refl,
    PP:ld_pc => (n_pp;mod_pp;pred_pp),
    PP:slash => [],
    PP:e_deps => [].

%pp_predm(PP) :-
%    max_pred(PP),
%    PP:wh => nwh,
%    PP:pcat => (als_pred;pp_pred).

wh_pp_predm(PP) :-
    max_pred(PP),
    PP:wh => ywh,
    PP:pcat => als_pred.

redrel_modifier(Sbar) :-
    Sbar => redrel,
    %%    Sbar:tmploc => ~str_er & ~wk_er & ~postp,
    %% In 1936 herbezette Duitsland het Rijnland , waar de geallieerden niet op reageerden .
    Sbar:tmploc => ~wk_er & ~postp,
    Sbar:e_deps => [],
    Sbar:sub_wh => ywh,
    Sbar:sub_wh => nq,
