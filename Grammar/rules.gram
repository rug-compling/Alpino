    hd_comp_structure(VP0,NP,VP).

aan_het_structure(VP,Aanhet,Inf) :-
    structure,
    VP => v, Inf => vb,
    unify_mods(Aanhet),
    unify_vb_v(VP0,Inf),
    unify_except_l(VP0,VP,[ccat0,ccat,dt,vform]),
    Inf:vform => inf,
    xy_dep_dt(Aanhet,Inf,VP,ahi,cmp,body),
    VP:dt:mod => [],
    VP:dt:app => [],
    VP:dt:det => [],
    VP:dt:predm => [],
    Inf:ccat0 <=> Inf:ccat.

