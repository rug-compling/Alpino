    Clist => clist,
    Clist:cform <=> Conj:cform,
    Clist:left_conj <=> Conj:left_conj,
    Clist:etc => yes,
    Conj => conj,
    unify_mods(Conj),
    Clist:cats => [],
    Conj:dt <=> ConjDt,
    Clist:conj <=> [ConjDt].

%%EX%% een fijne avond en tot ziens
%%EX%% ik klap in mijn handen en voila
grammar_rule(end_coord(en_tag),Clist,[OPTCOMMA, Conj, TAG]) :-
    structure,
    optcomma(OPTCOMMA),
    TAG => tag,
    TAG:np => no,
    TAG:dt <=> TagDT,
