    RootList => clist,
    ImpList => clist,
    ImpList:within_word => no,
    RootList:cat <=> Root,
    ImpList:cat <=> Imp,
    Imp => imp,
  
    Imp:mods => [],
    Imp:dets => [],
    Imp:apps => [],
    Imp:predms => [],

    RootList:cats <=> ImpList:cats,
    RootList:conj <=> ImpList:conj,
    RootList:left_conj <=> ImpList:left_conj,
    ImpList:etc => no,
    RootList:cform <=> ImpList:cform,
    Root => root,
    Root:question => no,
    Root:dt <=> Imp:dt,
    ImpList:last => last,
