    optcomma(COMMA),
    MAX => start,
    van_naar_struct(PP1,PP2,MAX).

van_naar_struct(PP1,PP2,MAX) :-
    ind_max_pp(PP1),
    PP1:prep <=> Van,
    when(nonvar(Van),
	 (   Van == van
	 ;   Van == vanaf
	 )
	),
    ind_max_pp(PP2),
    PP2:prep <=> Naar,
    when(nonvar(Naar),
	 (   Naar == naar
	 ;   Naar == tot
	 ;   Naar == [tot,en,met]
	 )
	),
    dp_dp_structure(PP1,PP2,MAX).

