DISK=/dev/shm
MAKEFLAGS=--no-print-directory

QPROLOGMAXSIZE=20000

jobname=$(shell echo $(suite)|sed -e 's/nlcow_part/nlc/'\
                                  -e 's/part//'\
                                  -e 's/volkskrant/v/'\
                                  -e 's/trouw/t/'\
                                  -e 's/nrc/n/'\
                                  -e 's/nlcow_/n/'\
                                  -e 's/0000000/f/'\
                                  -e 's/000000/e/'\
                                  -e 's/parool/p/' | tr -d '-' | cut -c 1-10)


def:
	@echo make: no target specified

q=nodes
job:
	(  \
   echo "#!/bin/sh" ;\
   echo "#SBATCH --nodes=1" ;\
   echo "#SBATCH --ntasks=1" ;\
   echo "#SBATCH --mem=$(QPROLOGMAXSIZE)" ;\
   echo "#SBATCH --time=24:00:00" ;\
   echo "#SBATCH --constraint=centos7" ;\
   echo "export PROLOGMAXSIZE=$(QPROLOGMAXSIZE)M";\
   echo "hostname -f " ;\
   echo "echo $(suite) " ;\
   echo "cd `pwd`";\
   echo "$(MAKE) -s $(HPCTARGET) suite=$(suite) cdb_part=$(cdb_part)";\
       ) | sbatch --job-name=$(suite)

command:
	(  \
   echo "#!/bin/sh" ;\
   echo "#SBATCH --nodes=1" ;\
   echo "#SBATCH --ntasks=1" ;\
   echo "#SBATCH --mem=$(QPROLOGMAXSIZE)" ;\
   echo "#SBATCH --time=24:00:00" ;\
   echo "#SBATCH --constraint=centos7" ;\
   echo "export PROLOGMAXSIZE=$(QPROLOGMAXSIZE)M";\
   echo "hostname -f " ;\
   echo "echo $(suite) " ;\
   echo "cd `pwd`";\
   echo "$(COMMAND)" ;\
       ) | sbatch 

